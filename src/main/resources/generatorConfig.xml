                            targetProject="D:/spring-mybatis/src/main/java" />
        <sqlMapGenerator targetPackage="org.yaoyao.mapping"
                         targetProject="D:/spring-mybatis/src/main/java" />
        <javaClientGenerator targetPackage="org.yaoyao.dao"
            targetProject="D:/spring-mybatis/src/main/java"  type="XMLMAPPER" />
